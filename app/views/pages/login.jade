extends ../base

prepend body

  main.login

    .login__container
      if form == 'login'
        form(method='post', action='/login')
          h1 Login.
          label
            input(type='email', name='email', placeholder='Email', required)
          label
            input(type='password', name='password', placeholder='Password', required)
          button.button--primary.button--wide(type='submit') Submit


      if form == 'signup'
        form(method='post', action='/signup')
          h1 Signup.
          label
            input(type='email', name='email', placeholder='Email', required)
          label
            input(type='password', name='password', placeholder='Password', required)
          button.button--primary.button--wide(type='submit') Submit

      if error
        pre.error= error
