- var csrfToken = req.csrfToken()

h2 Current payment details
ul
  each payment in req.user.payment
    li
      p #{payment}
      a.delete-address(data-address-id='#{payment._id}', data-csrf-token=csrfToken) delete

h2 Add new payment details
form(name='updatePayment', method='put', action='/user/payment')
  .form__item.form__group
    h3 Bank account
    .form__group__item
      input(name='payment[bank][name]', type='text', placeholder='Bank name')
    .form__group__item
      input(name='payment[bank][account]', type='text', placeholder='Account number')
    .form__group__item
      input(name='payment[bank][sort_code]', type='text', placeholder='Sort Code')

  .form__item.form__group
    h3 Paypal
    .form__group__item
      input(name='payment[paypal]', type='email', placeholder='PayPal')

  .form__item.hidden
    input(type='hidden', name='_csrf', value=csrfToken)
  .form__item
    button(type='submit') Confirm
