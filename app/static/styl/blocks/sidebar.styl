item = sidebar
sections = dashboard, invoices, clients, me, services, addresses, payment, settings
light-grey = #d2d2d2
dark-grey = #7d7d7d

.{item}
  display flex
  flex-direction column
  justify-content space-between
  border-right 1px solid light-grey
  background-color white

.{item}__logo
  display block
  height 45px
  margin 1.5em 0

  img
    display block
    height inherit
    margin 0 2em

// Create button
.{item}__create
  display block
  width 80%
  margin 1em auto
  padding .75em 2em
  border 1px solid light-grey
  border-radius 4px
  box-shadow inset 0 -4px 0 rgba(0,0,0,0.05)
  > *
    display inline-block
    vertical-align middle

  img
    width 20px
    height 20px

  span
    margin-left 1em
    color dark-grey

// Navigation
.{item}__nav
  margin 1.5em 0

  a
    display block
    padding .5em 25px
    text-decoration none
    color dark-grey
    &:hover
      background-color #f7f7f7

  // active class to active nav section
  for section, i in sections
    &.{section}
      .{section}
        color #444
        font-weight bold
        font-size 1.1em
        background-color #F7FCFF
        padding-left 22px
        border-left 3px solid color--blue

// Footer
.{item}__nav--footer
  display flex
  border-top 1px solid rgba(0,0,0,0.05)
  a
    display flex
    flex-direction column
    align-items center
    justify-content center
    width 80px
    height 60px
    border-left 1px solid rgba(0,0,0,0.05)
    &:first-child
      border none

  img
    width 24px
    height 24px
