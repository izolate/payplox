item = tabs

.{item}
  display flex
  justify-content space-between
  line-height 57px
  padding 0 2em
  background-color white
  border-bottom 1px solid rgba(0,0,0,0.1)

  h1
    line-height 60px
    color #999

    small
      vertical-align middle
      color color--body

.{item}__nav
  a
    position relative
    display inline-block
    margin-left 3em
    color inherit
    text-decoration none

  a::before
    content ''
    position absolute
    bottom 20px
    left -1.5em
    width 1px
    height 20px
    background-color rgba(0,0,0,0.1)

  a:first-child::before
    margin 0
    content none

  .active
    color color--blue
    border-bottom 3px solid color--blue

// Alternate-style tabs
.tabs--alt
  background-color transparent
  border none
  nav
    a
      margin-left 0
      margin-right 3em
    a:last-child
      margin-right 0
    .active
      border-bottom 0
