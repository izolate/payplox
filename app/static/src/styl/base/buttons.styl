button
  border none

button, .button
  display inline-block
  height: 40px;
  padding: 0 30px;
  line-height: 38px;
  font-family inherit
  font-size $font-base*1.2
  font-weight 500
  text-align center
  white-space: nowrap;
  cursor pointer
  color $color--blue
  background-color: transparent;
  border: 1px solid $color--blue;
  -webkit-appearance none
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

  &:disabled
    cursor not-allowed

  &:focus
    outline none

  &.button--primary
    background-color $color--blue
    color white
    &:hover, &:focus
      background-color #4B86C2
      border-color #4B86C2

  &.button--secondary
    background-color $color--pale-blue

  &.button--blank
    border-color transparent

  &.button--wide
    width 100%
