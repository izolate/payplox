// Font family
fontFamily-serif = georgia, times, serif
fontFamily-sans = 'theinhardt', 'Helvetica Neue', sans-serif

// Font size
fontSize-base = 18px
fontSize-large = fontSize-base * 1.5
fontSize-small = fontSize-base * 0.75
fontSize-h1 = fontSize-base * 3
fontSize-h2 = fontSize-base * 2.5
fontSize-h3 = fontSize-base * 2
fontSize-h4 = fontSize-base * 1.5
fontSize-h5 = fontSize-base * 1.25
fontSize-h6 = fontSize-base * 1

// Line height
lineHeight-base = 1.6
lineHeight-tight = lineHeight-base * 0.8
lineHeight-spaced = lineHeight-base * 1.2

// Colors
color--navy = #205081
color--blue = #3572b0
