{
  "name": "skeleton",
  "version": "1.0.0",
  "description": "Starter skeleton for a web app",
  "main": "app/index.js",
  "scripts": {
    "develop": "npm run js:dev && npm run css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "css": "stylus app/static/styl/index.styl -o app/static/dist/",
    "js:dev": "browserify app/static/js/index.js -t babelify --debug -o app/static/dist/index.js",
    "js:prd": "browserify app/static/js/index.js -t babelify -t uglifyify -o app/static/dist/index.js",
    "watch": "chokidar 'app/static/{styl,js}/**/*.{styl,js}' -c 'npm run develop'",
    "start": "pm2 start app/index.js --name payplox --interpreter iojs --node-args '--harmony --use-strict'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/izolate/skeleton.git"
  },
  "author": "izolate",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/izolate/skeleton/issues"
  },
  "homepage": "https://github.com/izolate/skeleton",
  "dependencies": {
    "babelify": "^6.3.0",
    "bcryptjs": "^2.2.1",
    "body-parser": "^1.13.3",
    "browserify": "^10.2.6",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.3.5",
    "country-list": "0.0.3",
    "csurf": "^1.8.3",
    "domready": "^1.0.8",
    "dotenv": "^1.2.0",
    "express": "^4.13.3",
    "express-session": "^1.11.3",
    "form-serialize": "^0.6.0",
    "jade": "^1.11.0",
    "mongoose": "^3.9.7",
    "passport": "^0.2.2",
    "passport-local": "^1.0.0",
    "stylus": "^0.51.1",
    "uglifyify": "^3.0.1"
  },
  "devDependencies": {
    "chokidar-cli": "^0.2.1"
  }
}
